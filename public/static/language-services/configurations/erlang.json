{
    "comments": {
        "lineComment": "%"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["<<", ">>"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["string", "comment"] },
        { "open": "[", "close": "]", "notIn": ["string", "comment"] },
        { "open": "(", "close": ")", "notIn": ["string", "comment"] },
        { "open": "<<", "close": ">>", "notIn": ["string", "comment"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
        { "open": "\"", "close": "\"" }
    ],
    "folding": {
        "markers": {
            "start": "^\\s*\\%\\%region\\b",
            "end": "^\\s*\\%\\%endregion\\b"
        }
    }
}
